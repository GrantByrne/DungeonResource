@model DungeonResource.Web.Models.User.LogInViewModel

@{
    ViewBag.Title = "LogIn";
}

<div class="form-signin1">

    <h2>Log In</h2>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div>
                <label class="control-label">@Html.LabelFor(model => model.Username)</label>
                <span class="label-danger">@Html.ValidationMessageFor(model => model.Username)</span>
            </div>
            <div class="controls">
                @Html.EditorFor(model => model.Username)
            </div>
        </div>

    <div class="form-group">
        <div>
            <label class="control-label">@Html.LabelFor(model => model.Password)</label>
            <span class="label-danger">@Html.ValidationMessageFor(model => model.Password)</span>
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.Password)
        </div>
    </div>

    <div>
        <input value="Sign In" class="btn btn-large btn-default" type="submit" />
    </div>
    }

</div>
